 * 
 * Provides a CLI for the code processor unit tests
 * @author Bryan Hughes &lt;<a href='mailto:bhughes@appcelerator.com'>bhughes@appcelerator.com</a>&gt;
 */
 
var path = require('path'),
	spawn = require('child_process').spawn,
	test262Dir = path.resolve(path.join(__dirname, '..', 'test-262'));

spawn('python', [
	path.resolve(path.join(test262Dir, 'tools', 'packaging', 'test262.py')), 
	'--command',
	path.resolve(path.join(__dirname, '..', 'bin', 'runTest'))
], {
	stdio: 'inherit',
	cwd: test262Dir
});